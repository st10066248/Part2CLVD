@{
    ViewData["Title"] = "Contact Us";
}
<style>
    /* Contact Section */
    #contact {
        background-color: #f9f9f9;
        padding: 80px 0;
    }

        #contact h2 {
            text-align: center;
            margin-bottom: 50px;
            color: #333;
        }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .contact-info {
        display: flex;
        justify-content: space-between;
        margin-bottom: 50px;
    }

    .info {
        flex-basis: calc(33.333% - 20px);
        text-align: center;
    }

        .info h3 {
            margin-bottom: 10px;
            color: #555;
        }

        .info p {
            color: #777;
        }

    #map {
        text-align: center;
    }

        #map h3 {
            margin-bottom: 20px;
            color: #555;
        }
</style>
<section id="contact">
    <div class="container">
        <h2>Contact Us</h2>
        <div class="contact-info">
            <div class="info">
                <h3>Address</h3>
                <p>123 Main Street,<br>Cityville, Country</p>
            </div>
            <div class="info">
                <h3>Email</h3>
                <p>info@khumalocraft.com</p>
            </div>
            <div class="info">
                <h3>Phone</h3>
                <p>+1234567890</p>
            </div>
        </div>
        <div id="map">
            <h3>Find Us</h3>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3462.3388351957115!2d31.033042876414232!3d-29.796753919836334!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1ef707aa871594bd%3A0x8f02f03f86d820cd!2sThe%20IIE&#39;s%20Varsity%20College%20-%20Durban%20North!5e0!3m2!1sen!2sza!4v1711455518529!5m2!1sen!2sza" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>
</section>
